<%= form_for([@category, task]) do |form| %>
    <p>
        <%= form.text_field :name, placeholder: "Enter Task Name (required)" %>
    </p><br />

    <p>
        <%= form.text_field :description, placeholder: "Enter Task Description (optional)"%>
    </p><br/>
    <p>
        <%= form.label :due_date, "Due Date (optional)"%><br>
        <%= form.datetime_local_field :due_date %>
    </p><br />

    <p>
        <div class="checkbox-div">
        <%= form.label :completed, "Completed? " %>
        <%= form.check_box :completed %>
        </div>
    </p><br/ >
  
    <p>
    <div class="button">
        <%= form.submit "Submit" %>
    </div> <br>
    </p>

<% end %>