<%= render "layouts/navbar" %>

<div class="spacing">
  <div class="main-container">

    <div>
      <h1>🍀 Tasks Due Today</h1>
      <% if @tasks_today.length > 0 %>
          <% @tasks_today.each do |task| %>
              <%= render "task_common", task: task %>
          <% end %>
      <% else %>
          <br />
          <div>No tasks due for today.</div>
      <% end  %>
    </div>

  </div>
</div>